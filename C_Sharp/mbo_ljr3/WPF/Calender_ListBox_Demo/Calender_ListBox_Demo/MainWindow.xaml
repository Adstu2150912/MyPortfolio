<Window x:Class="Calendar_ListBox_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar_ListBox_Demo"
        mc:Ignorable="d"
        Title="Calendar ListBox Demo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="287*"/>
        </Grid.ColumnDefinitions>
        <Calendar Name="calendar" SelectionMode="MultipleRange" 
                  VerticalAlignment="Top" HorizontalAlignment="Left" 
                  Margin="50,50,0,0" Grid.ColumnSpan="3"
                  SelectedDatesChanged="Calendar_SelectedDatesChanged"></Calendar>
        <ListBox Name="lbDatums" Height="300" Width="500" 
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Margin="32,50,0,0" SelectionMode="Extended" Grid.Column="5" Grid.Row="2">
        </ListBox>
    </Grid>
</Window>
