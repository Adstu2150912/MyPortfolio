<Page x:Class="Gildenbondsharmonie.UI.Evenementtype"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gildenbondsharmonie.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Evenementtype"
      x:Name="UIEvenementType"
      Loaded="UIEvenementType_Loaded">

    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="NaamSubvenster" Margin="30" Text="Lijst Evenementtypes" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <ListView x:Name="lvEvenementType" Margin="40" ItemsSource="{Binding EvenementTypes}" SelectedItem="{Binding SelectedEvenementType}" Width="700" HorizontalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Evenementtype" DisplayMemberBinding="{Binding EvenementType}"></GridViewColumn>
                    <GridViewColumn Header="Beschrijving" DisplayMemberBinding="{Binding Beschrijving}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>
