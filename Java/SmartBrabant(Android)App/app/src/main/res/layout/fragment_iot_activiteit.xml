<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.IoT_ActiviteitFragment"
    android:id="@+id/fragment_iot_activiteit">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/unselected_background_color"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        android:id="@+id/tabellenVenster"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/activity_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.evrencoskun.tableview.TableView
                android:id="@+id/tvActiviteit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:column_header_height="@dimen/cell_height"
                app:row_header_width="@dimen/row_header_width"
                app:selected_color="@color/selected_background_color"
                app:shadow_color="@color/shadow_background_color"
                app:unselected_color="@color/unselected_background_color"
                app:separator_color="@color/separator_color"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/activity_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_container">
            <com.evrencoskun.tableview.TableView
                android:id="@+id/tvIoTApparaat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:column_header_height="@dimen/cell_height"
                app:row_header_width="@dimen/row_header_width"
                app:selected_color="@color/selected_background_color"
                app:shadow_color="@color/shadow_background_color"
                app:unselected_color="@color/unselected_background_color"
                app:separator_color="@color/separator_color"/>
        </FrameLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvInfoNoData"
        android:text="Momenteel is er geen data beschikbaar over de IoT-apparatuur en activiteiten binnen *plaats*. Excuses voor het ongemak."
        android:textSize="20dp"
        android:layout_marginTop="50px"
        android:paddingHorizontal="40px"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</FrameLayout>