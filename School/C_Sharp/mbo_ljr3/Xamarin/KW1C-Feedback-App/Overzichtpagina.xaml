<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KW1C_Feedback_App.Overzichtpagina"
             Title="Overzicht feedback">
    <MasterDetailPage.Master>
        <ContentPage Title="Navigatie">
            <StackLayout>
                <Button x:Name="btnLinkNaarOverzicht" Text="Invoerpagina" Clicked="LinkNaarInvoerpagina_Clicked"></Button>
                <Button x:Name="btnMasterBtnLinkInvoerPagina" Text="Overzichtpagina" Clicked="LinkNaarOverzicht_Clicked"></Button>
                <Button x:Name="btnlinkNaarResultaat" Text="Resultaatpagina" Clicked="linkNaarResultaat_Clicked"></Button>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Title="HoofdPagina">
            <StackLayout>
                <Button x:Name="BtnLinkNaarInvoerPagina" Text="Nieuwe Feedback" Clicked="LinkNaarInvoerpagina_Clicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center"></Button>
                <StackLayout>
                    <ListView x:Name="lvFeedback"></ListView>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>