<Window x:Class="Opdracht_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opdracht_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto">
            <Label x:Name="lblName" HorizontalAlignment="Center">Uw naam:</Label>
            <TextBox x:Name="txtName" Height="20" Width="80" TextChanged="TxtName_TextChanged"/>
            <TextBlock x:Name="tblkName" Text="{Binding ElementName=txtName, Path=Text}" HorizontalAlignment="Center"></TextBlock>
            <Label x:Name="lblLengte" HorizontalAlignment="Center" VerticalAlignment="Center">Aantal karakters van uw naam:</Label>
            <TextBlock x:Name="tblkLengte" Text="{Binding ElementName=txtName, Path=Text.Length}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
