<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.PlaatsAdviesFragment"
    android:id="@+id/fragment_plaatsadvies">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hoofdVenster"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:id="@+id/container1">
            <TextView
                android:id="@+id/tvLblTevredenheid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="40px"
                android:text="Tevredenheid mensen over plaats:"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tvTevredenheidWaarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="40dp"
                android:text="*Percentage*"
                app:layout_constraintTop_toBottomOf="@+id/tvLblTevredenheid"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:id="@+id/tvLblAdvies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="40dp"
                android:text="Advies voor inrichting van de plaats als SMART-City:"
                app:layout_constraintTop_toBottomOf="@+id/tvTevredenheidWaarde"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="40dp"
            android:fillViewport="true">
            <TextView
                android:id="@+id/tvAdviesWaarde"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="40px"
                android:text="*Advies*" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>